@page "/edit-asset/{AssetId:int}"
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Rediger Aktiv</PageTitle>

<h1>Rediger Aktiv</h1>

@if (asset != null)
{
    <EditForm Model="asset" OnValidSubmit="SaveAsset">
        <DataAnnotationsValidator />
        <div>
            <label>Aktiv</label>
            <InputText @bind-Value="asset.Name" />
            <ValidationMessage For="() => asset.Name" />
        </div>
        <div>
            <label>VÃ¦rdi</label>
            <InputNumber @bind-Value="asset.Value" />
        </div>
        <div>
            <label>Likvid</label>
            <InputCheckbox @bind-Value="asset.Liquid" />
        </div>
        <div>
            <button type="submit">Gem</button>
            <button @onclick="CancelEdit">Annuller</button>
        </div>
    </EditForm>
}
else
{
    <p>Aktiv ikke fundet.</p>
}

@code {
    [Parameter] public int AssetId { get; set; }

    private Asset? asset;

    protected override void OnInitialized()
    {
        asset = AssetsRepository.GetAssetById(AssetId);
    }

    private void SaveAsset()
    {
        if (asset != null)
        {
            AssetsRepository.UpdateAsset(asset);
            NavigationManager.NavigateTo("/aktiver");
        }
    }

    private void CancelEdit()
    {
        NavigationManager.NavigateTo("/aktiver");
    }
}
